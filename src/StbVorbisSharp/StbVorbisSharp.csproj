<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Authors>StbVorbisSharpTeam</Authors>
    <Product>StbVorbisSharp</Product>
    <PackageId>StbVorbisSharp</PackageId>
    <TargetFrameworks>net48;netstandard2.0;netstandard2.1;netcoreapp3.1</TargetFrameworks>
    <Description>C# port of the stb_vorbis.c</Description>
    <PackageLicenseUrl>Public Domain</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/StbSharp/StbVorbisSharp</PackageProjectUrl>
    <NoWarn>NU1701</NoWarn>
    <AssemblyName>StbVorbisSharp</AssemblyName>
    <RootNamespace>StbVorbisSharp</RootNamespace>
    <Version>1.0.0.0</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Configurations>Debug;Release;Server</Configurations>
    <Platforms>AnyCPU</Platforms>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)' == 'Server' ">
    <Optimize>true</Optimize>
    <DebugType>none</DebugType>
  </PropertyGroup>
</Project>
